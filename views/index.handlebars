
<div class = "container">
    <div class="jumbotron">
        <img src="http://torianne.ink/wp-content/uploads/2014/07/Burger.png"  width="400px">
        <h1>Eat da Burger!</h1>
    </div>
    <div class ="row">
        <div class="col-md-6 col-md-offset-3">
            <form class ="create-form" >
                    <div class="form-group">
                            <label for="specficid">Enter new Burger</label>
                            <input type="text" class="form-control" id="name" >
                    </div>
                    <button type="submit" id="submit">Submit</button>
            </form>
        </div>
    </div>
    
    <div class ="row">
        
        <div class = "col-md-6">
            <h1>Burger Available</h1>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        <div>
                            {{!-- <form action ="/burger/{{this.id}}?_method=put"> --}}
                                <li>
                                    {{id}}.{{burger_name}}
                                </li>
                                {{!-- <input type="hidden" name="devoured" value="1">  --}}
                                <button id="eatburger" data-id="{{id}}" data-new-devoured="{{devoured}}">devour</button>
                            {{!-- </form> --}}
                        </div>    
                    {{/unless}}    
                {{/each}}
            </ul>
        </div>
    
        <div class ="col-md-6">
            <h1>Out of order Burger</h1>
            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        <div class="burgergone">
                            <li>{{this.burger_name}}</li>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    
</div>