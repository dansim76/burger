<div class = "container">
    <img src="http://moziru.com/images/burger-clipart-kawaii-3.jpg"  width="400px">
    <div class ="row">
        <h1> Eat Da Burger</h1>
        <div>
            <h1>Burger Available</h1>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        <div>
                            {{!-- <form action ="/burger/{{this.id}}?_method=put"> --}}
                                <li>
                                    {{id}}.{{burger_name}}
                                </li>
                                {{!-- <input type="hidden" name="devoured" value="1">  --}}
                                <button id="eatburger" data-id="{{id}}" data-new-devoured="{{devoured}}">devour</button>
                            {{!-- </form> --}}
                        </div>    
                    {{/unless}}    
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <h1>Out of order Burger</h1>
        <ul>
            {{#each burger}}
                {{#if devoured}}
                    <div class="burgergone">
                        <li>{{this.burger_name}}</li>
                    </div>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    <div>
        <form class ="create-form" >
                <div class="form-group">
                        <label for="specficid">Burger</label>
                        <input type="text" class="form-control" id="name" >
                </div>
                <button type="submit" id="submit">Submit</button>
        </form>
    </div>
</div>